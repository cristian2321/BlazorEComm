<div class="dropdown">
    <button @onclick="ToggleUserMenu"
            @onfocusout="HideUserMenu"
            class="btn btn-secondary dropdown-toggle user-button">
        <i class="oi oi-person"></i>
    </button>
    <div class="dropdown-menu dropdown-menu-right @GetUserMenuCssClass()">
       <AuthorizeView>
            <Authorized>
                <a href="profile" class="dropdown-item"> Profile </a>
                <a href="orders" class="dropdown-item"> Orders </a>
                <a href="address" class="dropdown-item"> Address </a>
                <br/>
                <button class="dropdown-item" @onclick="Logout">Logout</button>
           </Authorized>
           <NotAuthorized>
                <a href="login?returnUrl=@NavigationManager.ToBaseRelativePath(NavigationManager.Uri)" class="dropdown-item">Login</a>
                <a href="register" class="dropdown-item"> Register </a>
           </NotAuthorized>
       </AuthorizeView>

    </div>
</div>