@page "/cart"

<PageTitle>Shopping Cart</PageTitle>

<h3>Shopping Cart</h3>

@if (_cartProducts == null || !_cartProducts.Any())
{
    <span>@_message</span>
}
else
{
    <div>
        @foreach (var product in _cartProducts)
        {
            <div class="container">
                <div class="image-wrapper">
                    <a href="/products/@product.ProductId">
                    <img src="@product.ImageUrl" class="image" />
                    </a>
                </div>
                <div class="name">
                    <h5><a href="/products/@product.ProductId">@product.Title</a></h5>
                    <span>@product.ProductType</span><br />
                </div>
                <div class="cart-product-price">$@product.Price</div>
            </div>
        }
        <div class="cart-product-price">
            Total (@_cartProducts.Count): $@_cartProducts.Sum(product => @product.Price )
        </div>
    </div>
}