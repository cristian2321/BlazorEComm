@page "/cart"

<PageTitle>Shopping Cart</PageTitle>

<h3 class="center-text">Shopping Cart</h3>

@if (_cartProducts == null || !_cartProducts.Any())
{
    <span>@_message</span>
}
else
{
    <div>
        @foreach (var product in _cartProducts)
        {
            <div class="container">
                <div class="image-wrapper">
                    <img src="@product.ImageUrl" class="image" />
                </div>
                <div class="name">
                    <h5><a href="/product/@product.ProductId">@product.Title</a></h5>
                    <span>@product.ProductType</span><br />
                <div class="left-text"> 
                     <button class="btn-delete" @onclick="@(() =>
                            RemoveProductFromCart(product.ProductId, product.ProductTypeId))">
                                Delete from cart
                     </button>
                </div>    
           
                </div>
                <div class="cart-product-price">$@product.Price</div>
            </div>
        }
        <div class="cart-product-price">
            Total (@_cartProducts.Count): $@_cartProducts.Sum(product => @product.Price )
        </div>

    </div>
}